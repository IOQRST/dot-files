{
  // Terminal
  "terminal.integrated.fontFamily": "Hack",
  //"terminal.integrated.defaultProfile.windows": "Git Bash",

  // Editor
  "editor.fontFamily": "'Hack', 'Symbols Nerd Font Mono', 'Symbols Nerd Font Mono Regular'",
  "editor.fontSize": 16,
  "editor.rulers": [80],
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.glyphMargin": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.block", "comment.block.documentation", "comment.line", "comment.line.double-slash", "punctuation.definition.comment", "multilineComments"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.editorAssociations": {
    "*.vsix": "default",
    "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
  },
  "explorer.compactFolders": false,

  // Telemetry
  "telemetry.telemetryLevel": "off",
  "runtime.args": ["--disable-crash-reporter"],

  // Formatter
  "prettier.tabWidth": 2,
  "prettier.printWidth": 250,
  "prettier.useTabs": false,
  "prettier.singleQuote": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // Remove trust banner
  "security.workspace.trust.banner": "never",

  // remove LiveServer Message
  "liveServer.settings.donotShowInfoMsg": true,

  // SpellChecker
  "cSpell.language": "en, ru",
  "cSpell.enabled": true,

  // Markdown Preview
  "markdown-preview-enhanced.mermaidTheme": "dark",

  // Emmet
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,

  // Remove recommendations
  "extensions.ignoreRecommendations": true,

  // Files
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*html": "html",
    "*css": "css",
    "*.txt": "plaintext"
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "workbench.colorTheme": "Andromeda Italic",
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true
}
