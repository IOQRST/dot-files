{
  // ====================Python Конфиг==========================================
  "python.venvPath": "~/.venv",
  "python.languageServer": "Jedi",
  "ruff.lint.enable": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false, // Отключить автоопределение отступов, чтобы избежать конфликтов с Python Indent
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "always" // Автоисправления Ruff при сохранении
    }
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["-v", "--cov", "--cov-report=html"],
  "testExplorer.mergeSuites": true,
  "testExplorer.showOnRun": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "pythonIndent.useTabOnHangingIndent": false,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "pythonIndent.keepHangingBracketOnLine": false,
  "files.exclude": {
    "**/__pycache__": true, // Скрыть pycache в проводнике (не связано с Python Indent, но полезно)
    "**/*.pyc": true // Скрыть .pyc файлы
  },
  "search.exclude": {
    "**/__pycache__": true // Исключить pycache из поиска
  },
  //============================================================================
  "terminal.integrated.fontFamily": "Hasklig",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.fontFamily": "'Haskling', 'Symbols Nerd Font Mono', 'Symbols Nerd Font Mono Regular'",
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.rulers": [80],
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.glyphMargin": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.block", "comment.block.documentation", "comment.line", "comment.line.double-slash", "punctuation.definition.comment", "multilineComments"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.vsix": "default",
    "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
  },
  "explorer.compactFolders": false,
  "symbols.hidesExplorerArrows": true,
  "telemetry.telemetryLevel": "off",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 250,
  "prettier.useTabs": false,
  "prettier.singleQuote": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "security.workspace.trust.banner": "never",
  "cSpell.language": "en, ru",
  "cSpell.enabled": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,
  "extensions.ignoreRecommendations": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.experimental.treeSitterTelemetry": false,
  "gitlens.telemetry.enabled": false,
  "chat.commandCenter.enabled": false,
  "breadcrumbs.enabled": false,
  "search.searchOnType": false,
  "terminal.integrated.gpuAcceleration": "on",
  "editor.codeLens": false,
  "workbench.colorTheme": "Horizon Italic",
  "workbench.iconTheme": "symbols",
  "git.enableSmartCommit": true
}
