{
  // Terminal
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Editor
  "editor.fontFamily": "'CaskaydiaCove Nerd Font Mono', 'Symbols Nerd Font Mono', 'Symbols Nerd Font Mono Regular'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.rulers": [80],
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.glyphMargin": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.block", "comment.block.documentation", "comment.line", "comment.line.double-slash", "punctuation.definition.comment", "multilineComments"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.editorAssociations": {
    "*.vsix": "default"
  },
  "explorer.compactFolders": false,

  // Telemetry
  "telemetry.telemetryLevel": "off",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  // Formatter
  "prettier.tabWidth": 2,
  "prettier.printWidth": 250,
  "prettier.useTabs": false,
  "prettier.singleQuote": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  // Remove trust banner
  "security.workspace.trust.banner": "never",

  // remove LiveServer Message
  "liveServer.settings.donotShowInfoMsg": true,

  // SpellChecker
  "cSpell.language": "en, ru",
  "cSpell.enabled": true,

  // Markdown Preview
  "markdown-preview-enhanced.mermaidTheme": "dark",
  "markdown-preview-enhanced.previewTheme": "none.css",

  // Emmet
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,

  // Remove recommendations
  "extensions.ignoreRecommendations": true,

  // Files
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*html": "html",
    "*css": "css",
    "*.txt": "plaintext"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "symbols.hidesExplorerArrows": false,
  "markdown-preview-enhanced.codeBlockTheme": "darcula.css",
  "oneDarkPro.editorTheme": "One Dark Pro Flat",
  "nebulaOni.update.restoreConfiguration": {
    "themeSettings": {
      "background": "Grey",
      "main": "Bumblebee",
      "highlight": "Ultra Violet",
      "focusBorder": "ON",
      "fontStyle": "Italic",
      "syntaxBrightness": "Normal",
      "comments": "Dark Violet",
      "favorite": "OFF"
    },
    "favoriteSettings": {
      "background": "Glacial Blue",
      "main": "Sakura",
      "highlight": "Ultra Violet",
      "focusBorder": "ON",
      "fontStyle": "Italic",
      "syntaxBrightness": "Dimmed",
      "comments": "Dark Magenta",
      "favorite": "Nebula Oni (Pegasus)"
    }
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro Flat"
}
