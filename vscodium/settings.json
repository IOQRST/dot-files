{
  // ================================== Python =================================
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.organizeImports": true,
  "python.languageServer": "Jedi",
  "autoDocstring.generateDocstringOnEnter": true,
  "autoDocstring.docstringFormat": "google",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAlll": "always",
      "source.organizeImports": "explicit"
    }
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "-v",
    "--cov",
    "--cov-report=html"
  ],
  "testExplorer.mergeSuites": true,
  "testExplorer.showOnRun": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "pythonIndent.useTabOnHangingIndent": false,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "pythonIndent.keepHangingBracketOnLine": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "search.exclude": {
    "**/__pycache__": true
  },
  // ===========================================================================
  //================================ LOVE2D ====================================
  "Windows Love2d Path": "D:\\ProgramFiles\\GameEngines\\LOVE\\love.exe",
  //============================================================================
  // ===========================================================================
  "terminal.integrated.fontFamily": "Hack",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.fontFamily": "'Hack', 'Symbols Nerd Font Mono', 'Symbols Nerd Font Mono Regular'",
  "files.autoSave": "afterDelay",
  "editor.fontSize": 14,
  "editor.rulers": [
    80
  ],
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.glyphMargin": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "comment.line.double-slash",
          "punctuation.definition.comment",
          "multilineComments"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.vsix": "default",
    "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
  },
  "explorer.compactFolders": false,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.banner": "never",
  "cSpell.language": "en, ru",
  "cSpell.enabled": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,
  "extensions.ignoreRecommendations": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.experimental.treeSitterTelemetry": false,
  "chat.commandCenter.enabled": false,
  "search.searchOnType": false,
  "terminal.integrated.gpuAcceleration": "on",
  "editor.codeLens": false,
  "git.enableSmartCommit": true,
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "simple-icons",
  "terminal.integrated.stickyScroll.enabled": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden"
}